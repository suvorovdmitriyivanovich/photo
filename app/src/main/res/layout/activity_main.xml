<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLayout"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorAccent"
        android:id="@+id/top_group">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/photo"
            android:id="@+id/text_header"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@drawable/login_input"
        android:id="@+id/photo_group"
        android:layout_below="@+id/top_group"
        android:padding="15dp"
        android:layout_margin="10dp">

        <com.photo.ui.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/ico"
            android:src="@drawable/user" />

        <RelativeLayout
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:id="@+id/round_circle"
            android:background="@drawable/shape_list_ico_blue_big">

            <RelativeLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/button_change"
                android:background="@drawable/dialog_button_transparent"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/change_icon"
                    android:src="@drawable/change_white"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

        </RelativeLayout>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/ico_box"
            android:layout_toRightOf="@+id/ico"
            android:layout_toEndOf="@+id/ico"
            android:layout_marginLeft="20dp"
            android:src="@drawable/user" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ico_big"
            android:src="@drawable/user"
            android:layout_below="@+id/ico"
            android:layout_marginTop="20dp" />

    </RelativeLayout>

</RelativeLayout>
