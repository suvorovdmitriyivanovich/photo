<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
<item android:state_pressed="true" >
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle"   >

        <solid
            android:color="#dadada" >
        </solid>

        <stroke
            android:width="1dp"
            android:color="#dadcdf" >
        </stroke>

        <padding
            android:top="5dp"
            android:bottom="5dp"    >
        </padding>

        <corners
            android:radius="1dp"   >
        </corners>

    </shape>
</item>
<item android:state_focused="true">
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle"   >

        <solid
            android:color="#dadada" >
        </solid>

        <stroke
            android:width="1dp"
            android:color="#dadcdf" >
        </stroke>

        <padding
            android:top="5dp"
            android:bottom="5dp"    >
        </padding>

        <corners
            android:radius="1dp"   >
        </corners>

    </shape>
</item>
<item >
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle"   >

        <solid
            android:color="#ffffff" >
        </solid>

        <stroke
            android:width="1dp"
            android:color="#dadcdf" >
        </stroke>

        <padding
            android:top="5dp"
            android:bottom="5dp"    >
        </padding>

        <corners
            android:radius="1dp"   >
        </corners>

    </shape>
</item>
</selector>